= form_for @network do |f|
  - if @network.errors.any?
    #error_explanation
      %h2= "#{pluralize(@network.errors.count, "error")} prohibited this network from being saved:"
      %ul
        - @network.errors.full_messages.each do |msg|
          %li= msg

  %p.flash.bg-danger.text-danger{'v-if': 'error'} {{error}}

  %p
    = f.label :url
  .input-group
    .input-group-addon= "http://"
    = f.text_field :url, class: 'form-control', 'v-model': 'url', 'v-on:change': 'urlChanged'

  %p
    = f.label :name
  %p
    = f.text_field :name, class: 'form-control', 'v-model': 'name'

  .well
    .row
      .col-md-3
        %p(v-if="image")
          %img{"v-bind:src" => "image", :width => "100%"}
        =f.hidden_field :image, 'v-model': 'image'

      .col-md-9
        %p(v-if="contact_info")
        Contact Info: {{contact_info}}
        =f.hidden_field :contact_info, 'v-model': 'contact_info'

  %p
    = f.label :comment
  %p
    = f.text_area :comment, class: 'form-control'

  %p
    = f.submit 'Save', class: 'btn btn-default'